{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Population of Malaysian States - Bar Chart with Interactions",
    "width": 800,
    "height": 400,
    "config": {
      "background": "#a8cde0"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/Arrtish2702/FIT3179-WK10/main/population_state_with_year.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "filter": "datum.year == yearSelection"
      },
      {
        "filter": "datum.sex == 'both'"
      },
      {
        "filter": "datum.age == 'overall'"
      },
      {
        "filter": "datum.ethnicity == 'overall'"
      }
    ],
    "params": [
      {
        "name": "yearSelection",
        "value": 2000,
        "bind": {
          "input": "range",
          "min": 1970,
          "max": 2024,
          "step": 1,
          "name": "Select Year: "
        }
      },
      {
        "name": "play",
        "value": false,
        "bind": {
          "input": "checkbox",
          "name": "Play Animation: "
        }
      }
    ],
    "signals": [
      {
        "name": "play",
        "update": "if(play, (yearSelection + 1) > 2024 ? 1970 : yearSelection + 1, yearSelection)",
        "on": [
          {
            "events": {"signal": "play"},
            "update": "yearSelection"
          }
        ]
      }
    ],
    "layer": [
      {
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "state",
            "type": "nominal",
            "axis": {"title": "State"}
          },
          "y": {
            "field": "population",
            "type": "quantitative",
            "axis": {"title": "Population"},
            "scale": {
              "domain": [0, 8000]
            }
          },
          "color": {
            "field": "population",
            "type": "quantitative",
            "scale": {"scheme": "reds"},
            "legend": {"title": "Population"}
          },
          "tooltip": [
            {"field": "state", "type": "nominal", "title": "State"},
            {"field": "population", "type": "quantitative", "title": "Population"},
            {"field": "year", "type": "nominal", "title": "Year"}
          ]
        }
      }
    ],
    "signals": [
      {
        "name": "timer",
        "value": 0,
        "on": [
          {
            "events": {"signal": "play"},
            "update": "if(play, timer + 1, 0)"
          },
          {
            "events": {"signal": "timer"},
            "update": "if(timer > 0, yearSelection, yearSelection + 1)"
          }
        ]
      }
    ]
  }
  